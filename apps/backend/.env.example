# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=          # optional; uncomment if Redis requires auth

# PostgreSQL (required — no default)
DATABASE_URL=postgresql://flashsale:flashsale@localhost:5432/flashsale

# Auth (required — minimum 16 characters)
ADMIN_API_KEY=dev-admin-key-12345678

# Rate Limiting
RATE_LIMIT_PER_IP=100
RATE_LIMIT_PURCHASE_PER_USER=1

# Observability
LOG_LEVEL=debug

# Scheduling
CRON_STATE_INTERVAL_MS=100
CRON_RECONCILIATION_SCHEDULE=*/5 * * * *
